<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homework.egms.mapper.UserMapper">

    <insert id="addUser" parameterType="com.homework.egms.bean.User">
        INSERT INTO users(user_name,password,sex,father_id,family_id,mate,birthday,introduction,role)
        VALUES (#{userName},#{password},#{sex},#{fatherId},#{familyId},#{mate},#{birthday},#{introduction},#{role})
    </insert>

    <delete id="deletUser" parameterType="java.lang.Long">
        delete from users where user_id=#{userId}
    </delete>

    <update id="updateUser" parameterType="com.homework.egms.bean.User">
        update users set user_name=#{userName},password=#{password},
        sex=#{sex},father_id=#{fatherId},family_id=#{familyId},mate=#{mate},birthday=#{birthday},
        introduction=#{introduction},role=#{role}
        where user_id=#{userId}
    </update>
    
    <select id="findById" parameterType="java.lang.Long" resultType="com.homework.egms.bean.User">
        SELECT * FROM users WHERE user_id=#{userId}
    </select>

    <select id="findPwd" parameterType="java.lang.Long" resultType="java.long.String">
        SELECT password FROM users WHERE user_id=#{userId}
    </select>

    <select id="findAuthority" parameterType="java.lang.Long">
        SELECT role FROM users WHERE user_id=#{userId}
    </select>

    <select id="findsiblings" parameterType="java.lang.Long" resultType="com.homework.egms.bean.User">
        SELECT * FROM users WHERE father_id=#{fatherId}
    </select>

</mapper>